{% extends '::layout.html.twig' %}

{% block content -%}
    <section class="row">
        <h1>
            Series list
            <a class="btn btn-primary" href="{{ path('series_create') }}">
                <i class="glyphicon glyphicon-plus-sign"></i>
                Ajouter
            </a>
        </h1>

        {% for serie in series %}
            <article class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                <header>
                    <figure>
                        <img class="img-responsive" src="{{ serie.picture|default(asset('/bundles/app/img/series-default.jpg')) }}" alt="picture" title="{{ serie.name }}">
                        <figcaption>
                            <h1>{{ serie.name }}</h1>
                        </figcaption>
                    </figure>
                </header>
                <p class="break-word">{{ serie.summary }}</p>
                <footer>
                    <p>Released on {{ serie.releasedAt|date }} in {{ serie.country }}</p>
                </footer>
                <aside>
                    <div class="btn-group" role="group" aria-label="action">
                        <a href="{{ path('series_show', {'id': serie.id}) }}" class="btn btn-warning">
                            <i class="glyphicon glyphicon-king"></i>Show
                        </a>
                        <a href="{{ path('series_edit', {'id': serie.id}) }}" class="btn btn-primary">
                            <i class="glyphicon glyphicon-edit"></i>Edit
                        </a>
                        {# Pas de bouton de supression dans une boucle #}
                        {#<a href="{{ form(delete_form) }}" class="btn btn-danger">
                            <i class="glyphicon glyphicon-trash"></i>Remove
                        </a>#}
                    </div>
                </aside>
            </article>
        {% endfor %}
    </section>



